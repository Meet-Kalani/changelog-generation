{
  "name": "changelog-generation",
  "version": "1.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "release": "release-it",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major"
  },
  "keywords": [],
  "author": "Meet Kalani",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "release-it": "^19.0.4"
  },
  "release-it": {
    "hooks": {
      "after:bump": "node scripts/generate-changelog.js"
    },
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_TOKEN",
      "host": "https://github.com",
      "releaseName": "v${version}",
      "skipChecks": true,
      "origin": "https://github.com",
      "projectId": "Meet-Kalani/changelog-generation"
    },
    "npm": {
      "publish": false
    }
  }
}
